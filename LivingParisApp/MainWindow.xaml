<Window x:Class="LivingParisApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Living Paris"
        Height="670"
        Width="980"
        Background="#FFF8E1">
    <Grid>
        <TabControl Background="#FFF8E1">
            <!-- Sign In Tab -->
            <TabItem Header="Sign In" x:Name="tabSignIn" Style="{StaticResource CroissantTabItem}">
                <StackPanel Margin="10" Background="#FFF8E1">
                    <TextBlock Text="Sign In" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Style="{StaticResource CroissantTextBlock}"/>
                    <TextBlock Text="Email:" Style="{StaticResource CroissantTextBlock}"/>
                    <TextBox x:Name="txtSignInEmail" Margin="0,5,0,10" KeyDown="txtSignIn_KeyDown" Style="{StaticResource CroissantTextBox}"/>
                    <TextBlock Text="Password:" Style="{StaticResource CroissantTextBlock}"/>
                    <PasswordBox x:Name="pwdSignIn" Margin="0,5,0,10" KeyDown="txtSignIn_KeyDown" Style="{StaticResource CroissantPasswordBox}"/>
                    <Button x:Name="btnSignIn" Content="Sign In" Padding="5" Width="100" HorizontalAlignment="Left" Style="{StaticResource CroissantButton}"/>
                    <TextBlock x:Name="txtSignInStatus" Margin="0,10,0,0" Style="{StaticResource CroissantTextBlock}"/>
                </StackPanel>
            </TabItem>
            <!-- Sign Up Tab -->
            <TabItem Header="Sign Up" x:Name="tabSignUp" Style="{StaticResource CroissantTabItem}">
                <ScrollViewer Background="#FFF8E1" VerticalScrollBarVisibility="Hidden">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Header -->
                            <RowDefinition Height="*"/>     <!-- Form Fields -->
                            <RowDefinition Height="Auto"/> <!-- Button Area -->
                            <RowDefinition Height="1000*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <TextBlock Text="Sign Up" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" 
                                Grid.ColumnSpan="2" Style="{StaticResource CroissantTextBlock}"/>
                        
                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Margin="0,40,10,0">
                            <TextBlock Text="Personal Information" FontWeight="SemiBold" FontSize="16" 
                                    Margin="0,0,0,15" Style="{StaticResource CroissantTextBlock}"/>
                            
                            <TextBlock Text="First Name:" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBox x:Name="txtFirstName" Margin="0,3,0,10" Style="{StaticResource CroissantTextBox}"/>
                            
                            <TextBlock Text="Last Name:" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBox x:Name="txtLastName" Margin="0,3,0,10" Style="{StaticResource CroissantTextBox}"/>
                            
                            <TextBlock Text="Email:" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBox x:Name="txtEmail" Margin="0,3,0,10" Style="{StaticResource CroissantTextBox}"/>
                            
                            <TextBlock Text="Phone Number:" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBox x:Name="txtPhone" Margin="0,3,0,10" Style="{StaticResource CroissantTextBox}"/>
                            
                            <TextBlock Text="Password:" Style="{StaticResource CroissantTextBlock}"/>
                            <PasswordBox x:Name="pwdSignUp" Margin="0,3,0,10" Style="{StaticResource CroissantPasswordBox}"/>
                            
                            <TextBlock Text="Confirm Password:" Style="{StaticResource CroissantTextBlock}"/>
                            <PasswordBox x:Name="pwdConfirm" Margin="0,3,0,15" Style="{StaticResource CroissantPasswordBox}"/>
                        </StackPanel>
                        
                        <!-- Right Column -->
                        <StackPanel Grid.Column="1" Margin="10,40,0,0">
                            <TextBlock Text="Address Information" FontWeight="SemiBold" FontSize="16" 
                                    Margin="0,0,0,15" Style="{StaticResource CroissantTextBlock}"/>
                            
                            <TextBlock Text="Street:" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBox x:Name="txtStreet" Margin="0,3,0,10" Style="{StaticResource CroissantTextBox}"/>
                            
                            <TextBlock Text="Street Number:" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBox x:Name="txtStreetNumber" Margin="0,3,0,10" Style="{StaticResource CroissantTextBox}"/>
                            
                            <TextBlock Text="Postcode:" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBox x:Name="txtPostcode" Margin="0,3,0,10" Style="{StaticResource CroissantTextBox}"/>
                            
                            <TextBlock Text="City:" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBox x:Name="txtCity" Margin="0,3,0,10" Style="{StaticResource CroissantTextBox}"/>
                            
                            <TextBlock Text="Closest Metro:" Style="{StaticResource CroissantTextBlock}"/>
                            <ComboBox x:Name="cmbMetro" Height="40" Margin="0,3,0,15" Style="{StaticResource CroissantComboBox}"/>
                            
                            <TextBlock Text="User Type:" Style="{StaticResource CroissantTextBlock}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                                <CheckBox x:Name="chkClient" Content="Client" Margin="0,0,20,0" Foreground="#8B4513" FontFamily="Segoe UI" Style="{StaticResource CroissantCheckBox}"/>
                                <CheckBox x:Name="chkChef" Content="Chef" Foreground="#8B4513" FontFamily="Segoe UI" Style="{StaticResource CroissantCheckBox}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Button and Status Area - separate row with padding -->
                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,30,0,0">
                            <Button x:Name="btnSignUp" Content="Sign Up" Width="120" Height="35" 
                                    HorizontalAlignment="Center" Style="{StaticResource CroissantButton}"/>
                            <TextBlock x:Name="txtSignUpStatus" Margin="0,10,0,0" TextAlignment="Center" 
                                    Style="{StaticResource CroissantTextBlock}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <!-- User Account Tab -->
            <TabItem Header="My Account" x:Name="tabAccount" Style="{StaticResource CroissantTabItem}">
                <Grid Margin="10" Background="#FFF8E1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="My Account" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Style="{StaticResource CroissantTextBlock}"/>
                    <StackPanel Grid.Row="1">
                        <StackPanel x:Name="viewModePanel">
                            <TextBlock x:Name="txtUserInfo" Text="Welcome, [User]" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBlock x:Name="txtUserEmail" Text="Email: [Email]" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBlock x:Name="txtClosestMetro" Text="ClosestMetro: [ClosestMetro]" Style="{StaticResource CroissantTextBlock}"/>
                            <TextBlock Text="Roles:" Margin="0,10,0,5" Style="{StaticResource CroissantTextBlock}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <CheckBox x:Name="chkAccountClient" Content="Client" Margin="0,0,20,0" IsEnabled="False" Foreground="#8B4513" FontFamily="Segoe UI"/>
                                <CheckBox x:Name="chkAccountChef" Content="Chef" IsEnabled="False" Foreground="#8B4513" FontFamily="Segoe UI"/>
                            </StackPanel>
                            <Button x:Name="btnEditAccount" Content="Edit Account" Width="120" HorizontalAlignment="Left" Margin="0,10,0,0" Click="BtnEditAccount_Click" Style="{StaticResource CroissantButton}"/>
                        </StackPanel>
                    </StackPanel>
                    <Button Grid.Row="2" x:Name="btnSignOut" Content="Sign Out" Width="100" HorizontalAlignment="Left" Style="{StaticResource CroissantButton}"/>
                </Grid>
            </TabItem>
            <!-- Metro Map Tab -->
            <TabItem Header="Metro Map" x:Name="metroMap" Style="{StaticResource CroissantTabItem}">
                <Grid Margin="20" Background="#FFF8E1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Paris Metro Map" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Style="{StaticResource CroissantTextBlock}"/>
                    <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#FFC107" BorderThickness="1" CornerRadius="5" ClipToBounds="True">
                        <Viewbox x:Name="mapViewbox" Stretch="Uniform">
                            <Canvas x:Name="metroCanvas" Width="1000" Height="1000" Background="Transparent"/>
                        </Viewbox>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Food Services Tab -->
            <TabItem Header="Food Services" x:Name="tabFoodServices" Style="{StaticResource CroissantTabItem}">
                <Grid>
                    <TabControl x:Name="foodServicesTabControl" Background="#FFF8E1" BorderThickness="0">
                        <!-- Browse and Order -->
                        <TabItem Header="Browse and Order" x:Name="tabBrowseOrder" Style="{StaticResource CroissantTabItem}">
                            <Grid Margin="10" Background="#FFF8E1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="300"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                    <TextBlock Text="Browse Available Dishes" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Style="{StaticResource CroissantTextBlock}"/>
                                    <WrapPanel Margin="0,0,0,10">
                                        <TextBlock Text="Name: " VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                        <TextBox x:Name="txtSearchDishName" Width="200" Padding="5,3" KeyDown="TxtSearchDishName_KeyDown" KeyUp="TxtSearchDishName_KeyUp" Style="{StaticResource CroissantTextBox}"/>
                                    </WrapPanel>
                                    <WrapPanel Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                                            <TextBlock Text="Dish Type:" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                            <ComboBox x:Name="cmbDishType" Width="120" SelectedIndex="0" Style="{StaticResource CroissantComboBox}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                                            <TextBlock Text="Diet:" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                            <ComboBox x:Name="cmbDiet" Width="120" SelectedIndex="0" Style="{StaticResource CroissantComboBox}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                                            <TextBlock Text="Origin:" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                            <ComboBox x:Name="cmbOrigin" Width="120" SelectedIndex="0" Style="{StaticResource CroissantComboBox}"/>
                                        </StackPanel>
                                        <Button x:Name="ApplyFiltersDishes" Content="Apply Filters" Padding="10,3" Click="BtnApplyFiltersDishes_Click" Style="{StaticResource CroissantButton}"/>
                                        <Button x:Name="btnClearFiltersDishes" Content="Clear Filters" Padding="10,3" Margin="5,0,0,0" Click="BtnClearFiltersDishes_Click" Style="{StaticResource CroissantButton}"/>
                                    </WrapPanel>
                                </StackPanel>
                                <DataGrid x:Name="dgDishes" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Style="{StaticResource CroissantDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                                        <DataGridTextColumn Header="Diet" Binding="{Binding Diet}" Width="*"/>
                                        <DataGridTextColumn Header="Origin" Binding="{Binding Origin}" Width="*"/>
                                        <DataGridTextColumn Header="Chef" Binding="{Binding ChefName}" Width="*"/>
                                        <DataGridTextColumn Header="Price" Binding="{Binding DishPrice, StringFormat={}{0:C2}}" Width="*"/>
                                        <DataGridTextColumn Header="Available Until" Binding="{Binding PeremptionDate, StringFormat={}{0:d}}" Width="*"/>
                                        <DataGridTemplateColumn Header="Add" Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="+" Click="BtnAddToCart_Click" Padding="5,0" Margin="2" Tag="{Binding DishID}" Style="{StaticResource CroissantButton}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Border Grid.Row="1" Grid.Column="1" BorderBrush="#a87a4f" BorderThickness="2" CornerRadius="5" ClipToBounds="True">
                                    <Grid Background="#FFF3E0" Margin="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Your Cart" FontWeight="Bold" FontSize="16" Margin="10" Style="{StaticResource CroissantTextBlock}"/>
                                        <ListBox x:Name="lbCart" Grid.Row="1" Margin="10">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderThickness="2">
                                                        <Grid Margin="0,2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="{Binding Name}" Grid.Column="0" Style="{StaticResource CroissantTextBlock}" Margin="0,5,4,0"/>
                                                            <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C2}}" Grid.Column="2" Style="{StaticResource CroissantTextBlock}" Margin="0,5,4,0"/>
                                                            <Button Content="X" Grid.Column="3" Width="25" Height="25" Padding="4,2" Margin="0,0,0,5" Click="RemoveFromCart_Click" CommandParameter="{Binding}" Style="{StaticResource CroissantButton}"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                        <StackPanel Grid.Row="2" Margin="10">
                                            <TextBlock Text="Delivery Address:" FontWeight="Bold" Margin="0,0,0,5" Style="{StaticResource CroissantTextBlock}"/>
                                            <RadioButton x:Name="rbMyAddress" Content="Use my registered address" IsChecked="True" Margin="0,0,0,5" Foreground="#8B4513" FontFamily="Segoe UI"/>
                                            <RadioButton x:Name="rbCustomAddress" Content="Use different address" Margin="0,0,0,5" IsEnabled="False" Foreground="#8B4513" FontFamily="Segoe UI"/>
                                            <StackPanel x:Name="pnlCustomAddress" Visibility="Collapsed" Margin="20,5,0,10">
                                                <TextBlock Text="Street:" Style="{StaticResource CroissantTextBlock}"/>
                                                <TextBox x:Name="txtOrderStreet" Margin="0,0,0,5" Style="{StaticResource CroissantTextBox}"/>
                                                <TextBlock Text="Street Number:" Style="{StaticResource CroissantTextBlock}"/>
                                                <TextBox x:Name="txtOrderStreetNumber" Margin="0,0,0,5" Style="{StaticResource CroissantTextBox}"/>
                                                <TextBlock Text="Postcode:" Style="{StaticResource CroissantTextBlock}"/>
                                                <TextBox x:Name="txtOrderPostcode" Margin="0,0,0,5" Style="{StaticResource CroissantTextBox}"/>
                                                <TextBlock Text="City:" Style="{StaticResource CroissantTextBlock}"/>
                                                <TextBox x:Name="txtOrderCity" Margin="0,0,0,5" Style="{StaticResource CroissantTextBox}"/>
                                            </StackPanel>
                                            <Separator Margin="0,5" Background="#FFC107"/>
                                            <Grid Margin="0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Total:" FontWeight="Bold" Grid.Column="0" Style="{StaticResource CroissantTextBlock}"/>
                                                <TextBlock x:Name="txtCartTotal" Text="€0.00" FontWeight="Bold" Grid.Column="1" Style="{StaticResource CroissantTextBlock}"/>
                                            </Grid>
                                            <Button x:Name="btnPlaceOrder" Content="Place Order" Padding="10,5" Margin="0,10,0,0" Click="BtnPlaceOrder_Click" Style="{StaticResource CroissantButton}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </TabItem>
                        <!-- Manage My Dishes -->
                        <TabItem Header="Manage My Dishes" x:Name="tabManageDishes" Style="{StaticResource CroissantTabItem}">
                            <Grid Margin="20" Background="#FFF8E1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="My Dishes" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Style="{StaticResource CroissantTextBlock}"/>
                                    <Button x:Name="btnAddNewDish" Content="Add New Dish" HorizontalAlignment="Left" Padding="10,5" Margin="0,0,0,10" Click="BtnAddNewDish_Click" Style="{StaticResource CroissantButton}"/>
                                </StackPanel>
                                <DataGrid x:Name="dgMyDishes" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Style="{StaticResource CroissantDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                                        <DataGridTextColumn Header="Price" Binding="{Binding DishPrice, StringFormat={}{0:C2}}" Width="*"/>
                                        <DataGridTextColumn Header="Created" Binding="{Binding FabricationDate, StringFormat={}{0:d}}" Width="*"/>
                                        <DataGridTextColumn Header="Expires" Binding="{Binding PeremptionDate, StringFormat={}{0:d}}" Width="*"/>
                                        <DataGridTextColumn Header="Diet" Binding="{Binding Diet}" Width="*"/>
                                        <DataGridTextColumn Header="Origin" Binding="{Binding Origin}" Width="*"/>
                                        <DataGridTemplateColumn Header="Actions" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Edit" Click="BtnEditDish_Click" Padding="5,0" Margin="2" Tag="{Binding DishID}" Style="{StaticResource CroissantButton}"/>
                                                        <Button Content="Delete" Click="BtnDeleteDish_Click" Padding="5,0" Margin="2" Tag="{Binding DishID}" Style="{StaticResource CroissantButton}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <!-- My Orders -->
                        <TabItem Header="My Orders" x:Name="tabMyOrders" Style="{StaticResource CroissantTabItem}">
                            <Grid Margin="20" Background="#FFF8E1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="My Orders" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Style="{StaticResource CroissantTextBlock}"/>
                                    <ComboBox x:Name="cmbOrderView" Width="200" HorizontalAlignment="Left" Margin="0,0,0,10" SelectionChanged="CmbOrderView_SelectionChanged" Style="{StaticResource CroissantComboBox}">
                                        <ComboBoxItem Content="Orders I Placed" IsSelected="True"/>
                                        <ComboBoxItem Content="Orders I Received"/>
                                    </ComboBox>
                                </StackPanel>
                                <DataGrid x:Name="dgOrdersPlaced" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Visibility="Visible" Style="{StaticResource CroissantDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Order ID" Binding="{Binding OrderID}" Width="*"/>
                                        <DataGridTextColumn Header="Date" Binding="{Binding OrderDate, StringFormat={}{0:d}}" Width="*"/>
                                        <DataGridTextColumn Header="Client" Binding="{Binding ClientName}" Width="*"/>
                                        <DataGridTextColumn Header="Chef" Binding="{Binding ChefName}" Width="*"/>
                                        <DataGridTextColumn Header="Total" Binding="{Binding OrderTotal, StringFormat={}{0:C2}}" Width="*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                        <DataGridTemplateColumn Header="Details" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="View" Click="BtnViewOrderDetails_Click" Padding="5,0" Margin="2" Tag="{Binding OrderID}" Style="{StaticResource CroissantButton}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Cancel Order" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="X" Click="BtnCancelOrder_Click" Padding="5,0" Margin="2" Tag="{Binding OrderID}">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource CroissantButton}">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                        <Setter Property="IsEnabled" Value="True"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <DataGrid x:Name="dgOrdersReceived" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Visibility="Collapsed" Style="{StaticResource CroissantDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Order ID" Binding="{Binding OrderID}" Width="*"/>
                                        <DataGridTextColumn Header="Date" Binding="{Binding OrderDate, StringFormat={}{0:d}}" Width="*"/>
                                        <DataGridTextColumn Header="Client Name" Binding="{Binding ClientName}" Width="*"/>
                                        <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                                        <DataGridTextColumn Header="Total" Binding="{Binding OrderTotal, StringFormat={}{0:C2}}" Width="*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                        <DataGridTemplateColumn Header="Details" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="View" Click="BtnViewOrderDetails_Click" Padding="5,0" Margin="2" Tag="{Binding OrderID}" Style="{StaticResource CroissantButton}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Complete" Click="BtnCompleteOrder_Click" Padding="5,0" Margin="2" Tag="{Binding OrderID}">
                                                            <Button.Style>
                                                                <Style TargetType="Button" BasedOn="{StaticResource CroissantButton}">
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                            <Setter Property="IsEnabled" Value="True"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        <Button Content="Refuse" Click="BtnRefuseOrder_Click" Padding="5,0" Margin="2" Tag="{Binding OrderID}">
                                                            <Button.Style>
                                                                <Style TargetType="Button" BasedOn="{StaticResource CroissantButton}">
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                            <Setter Property="IsEnabled" Value="True"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <!-- Admin Tab -->
            <TabItem Header="Admin Tab" x:Name="adminTab" Style="{StaticResource CroissantTabItem}">
                <Grid Margin="20" Background="#FFF8E1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Admin Dashboard" FontSize="20" FontWeight="Bold" Margin="0,-10,0,0" Style="{StaticResource CroissantTextBlock}"/>
                    <TabControl Grid.Row="1" Background="#FFF8E1" BorderThickness="0">
                        <!-- Manage Users -->
                        <TabItem Header="Manage Users" Style="{StaticResource CroissantTabItem}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="User Management" FontSize="16" FontWeight="Bold" Style="{StaticResource CroissantTextBlock}"/>
                                    <WrapPanel Margin="0,10,0,0">
                                        <TextBlock Text="Search by Email:" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                        <TextBox x:Name="txtSearchUser" Width="200" Padding="5,3" Margin="0,0,10,0" KeyDown="TxtSearchUser_KeyDown" KeyUp="TxtSearchUser_KeyUp" Style="{StaticResource CroissantTextBox}"/>
                                        <Button x:Name="btnSearchUser" Content="Search" Padding="10,3" Click="BtnSearchUser_Click" Style="{StaticResource CroissantButton}"/>
                                    </WrapPanel>
                                </StackPanel>
                                <DataGrid x:Name="dgUsers" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Style="{StaticResource CroissantDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Email" Binding="{Binding Mail}" Width="*"/>
                                        <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                                        <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" Width="*"/>
                                        <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*"/>
                                        <DataGridTextColumn Header="Closest Metro" Binding="{Binding ClosestMetro}" Width="*"/>
                                        <DataGridTextColumn Header="Role" Binding="{Binding Roles}" Width="*"/>
                                        <DataGridTextColumn Header="Total Money Spent" Binding="{Binding TotalMoneySpent}" Width="*"/>
                                        <DataGridTextColumn Header="Total Order Completed" Binding="{Binding TotalOrderCompleted}" Width="*"/>
                                        <DataGridTemplateColumn Header="Actions" Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Edit" Click="BtnEditUser_Click" Padding="5,0" Margin="2" Tag="{Binding UserID}" Style="{StaticResource CroissantButton}"/>
                                                        <Button Content="Delete" Click="BtnDeleteUser_Click" Padding="5,0" Margin="2" Tag="{Binding UserID}" Style="{StaticResource CroissantButton}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <!-- Manage Dishes -->
                        <TabItem Header="Manage Dishes" Style="{StaticResource CroissantTabItem}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="Dish Management" FontSize="16" FontWeight="Bold" Style="{StaticResource CroissantTextBlock}"/>
                                    <WrapPanel Margin="0,10,0,0">
                                        <TextBlock Text="Search by Name:" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                        <TextBox x:Name="txtSearchDish" Width="200" Padding="5,3" Margin="0,0,10,0" KeyDown="TxtSearchDish_KeyDown" KeyUp="TxtSearchDish_KeyUp" Style="{StaticResource CroissantTextBox}"/>
                                        <TextBlock Text="Filter by Chef:" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                        <ComboBox x:Name="cmbFilterChef" Width="150" Padding="5,3" Margin="0,0,10,0" Style="{StaticResource CroissantComboBox}">
                                            <ComboBoxItem Content="All Chefs" IsSelected="True"/>
                                        </ComboBox>
                                        <Button x:Name="btnSearchDish" Content="Search" Padding="5,3" Click="BtnSearchDish_Click" Style="{StaticResource CroissantButton}"/>
                                    </WrapPanel>
                                </StackPanel>
                                <DataGrid x:Name="dgAdminDishes" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Style="{StaticResource CroissantDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding DishID}" Width="*"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                                        <DataGridTextColumn Header="Chef" Binding="{Binding ChefName}" Width="*"/>
                                        <DataGridTextColumn Header="Price" Binding="{Binding DishPrice, StringFormat={}{0:C2}}" Width="*"/>
                                        <DataGridTextColumn Header="Created" Binding="{Binding FabricationDate, StringFormat={}{0:d}}" Width="*"/>
                                        <DataGridTextColumn Header="Expires" Binding="{Binding PeremptionDate, StringFormat={}{0:d}}" Width="*"/>
                                        <DataGridTextColumn Header="Diet" Binding="{Binding Diet}" Width="*"/>
                                        <DataGridTextColumn Header="Origin" Binding="{Binding Origin}" Width="*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                        <DataGridTemplateColumn Header="Actions" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Edit" Click="BtnEditAdminDish_Click" Padding="5,0" Margin="2" Tag="{Binding DishID}" Style="{StaticResource CroissantButton}"/>
                                                        <Button Content="Delete" Click="BtnDeleteAdminDish_Click" Padding="5,0" Margin="2" Tag="{Binding DishID}" Style="{StaticResource CroissantButton}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <!-- Manage Orders -->
                        <TabItem Header="Manage Orders" Style="{StaticResource CroissantTabItem}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="Order Management" FontSize="16" FontWeight="Bold" Style="{StaticResource CroissantTextBlock}"/>
                                    <WrapPanel Margin="0,10,0,0">
                                        <TextBlock Text="Filter by Status:" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                        <ComboBox x:Name="cmbOrderStatus" Padding="5,3" Width="150" SelectedIndex="0" Style="{StaticResource CroissantComboBox}">
                                            <ComboBoxItem Content="All"/>
                                            <ComboBoxItem Content="Pending"/>
                                            <ComboBoxItem Content="Completed"/>
                                            <ComboBoxItem Content="Cancelled"/>
                                        </ComboBox>
                                        <TextBlock Text="From:" VerticalAlignment="Center" Margin="15,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                        <DatePicker x:Name="dpFromDate" Padding="5,3" Width="130" Style="{StaticResource CroissantDatePicker}"/>
                                        <TextBlock Text="To:" VerticalAlignment="Center" Margin="15,0,5,0" Style="{StaticResource CroissantTextBlock}"/>
                                        <DatePicker x:Name="dpToDate" Padding="5,3" Width="130" Style="{StaticResource CroissantDatePicker}"/>
                                        <Button x:Name="btnFilterOrders" Content="Apply Filter" Padding="10,3" Margin="10,0,0,0" Click="BtnFilterOrders_Click" Style="{StaticResource CroissantButton}"/>
                                        <Button x:Name="btnClearFiltersOrders" Content="Clear Filters" Padding="10,3" Margin="5,0,0,0" Click="BtnClearFiltersOrders_Click" Style="{StaticResource CroissantButton}"/>
                                    </WrapPanel>
                                </StackPanel>
                                <DataGrid x:Name="dgAdminOrders" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Style="{StaticResource CroissantDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Order ID" Binding="{Binding OrderID}" Width="*"/>
                                        <DataGridTextColumn Header="Date" Binding="{Binding OrderDate, StringFormat={}{0:d}}" Width="*"/>
                                        <DataGridTextColumn Header="Client" Binding="{Binding ClientName}" Width="*"/>
                                        <DataGridTextColumn Header="Chef" Binding="{Binding ChefName}" Width="*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                        <DataGridTextColumn Header="Total" Binding="{Binding OrderTotal, StringFormat={}{0:C2}}" Width="*"/>
                                        <DataGridTemplateColumn Header="Actions" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="View" Click="BtnViewAdminOrder_Click" Padding="5,0" Margin="2" Tag="{Binding OrderID}" Style="{StaticResource CroissantButton}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>