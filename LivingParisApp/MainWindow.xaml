<Window x:Class="LivingParisApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Living Paris Authentication"
        Height="600"
        Width="850">
    <Grid>
        <TabControl>
            <!-- Sign In Tab -->
            <TabItem Header="Sign In" x:Name="tabSignIn">
                <StackPanel Margin="20">
                    <TextBlock Text="Sign In"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,20" />
                    <TextBlock Text="Email:" />
                    <TextBox x:Name="txtSignInEmail"
                             Margin="0,5,0,10" />
                    <TextBlock Text="Password:" />
                    <PasswordBox x:Name="pwdSignIn"
                                 Margin="0,5,0,20" />
                    <Button x:Name="btnSignIn"
                            Content="Sign In"
                            Width="100"
                            HorizontalAlignment="Left" />
                    <TextBlock x:Name="txtSignInStatus"
                               Margin="0,10,0,0" />
                </StackPanel>
            </TabItem>
            <!-- Sign Up Tab -->
            <TabItem Header="Sign Up" x:Name="tabSignUp">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Sign Up"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20" />
                        <TextBlock Text="First Name:" />
                        <TextBox x:Name="txtFirstName"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Last Name:" />
                        <TextBox x:Name="txtLastName"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Email:" />
                        <TextBox x:Name="txtEmail"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Password:" />
                        <PasswordBox x:Name="pwdSignUp"
                                     Margin="0,5,0,10" />
                        <TextBlock Text="Confirm Password:" />
                        <PasswordBox x:Name="pwdConfirm"
                                     Margin="0,5,0,10" />
                        <TextBlock Text="Phone Number:" />
                        <TextBox x:Name="txtPhone"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Street:" />
                        <TextBox x:Name="txtStreet"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Street Number:" />
                        <TextBox x:Name="txtStreetNumber"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Postcode:" />
                        <TextBox x:Name="txtPostcode"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="City:" />
                        <TextBox x:Name="txtCity"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Closest Metro (Optional):" />
                        <TextBox x:Name="txtMetro"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="User Type (Select One or Both):" />
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5,0,20">
                            <CheckBox x:Name="chkClient"
                                      Content="Client"
                                      Margin="0,0,20,0" />
                            <CheckBox x:Name="chkChef"
                                      Content="Chef" />
                        </StackPanel>
                        <Button x:Name="btnSignUp"
                                Content="Sign Up"
                                Width="100"
                                HorizontalAlignment="Left" />
                        <TextBlock x:Name="txtSignUpStatus"
                                   Margin="0,10,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <!-- User Account Tab (visible after login) -->
            <TabItem Header="My Account"
                     x:Name="tabAccount">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="My Account"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,20" />
                    <StackPanel Grid.Row="1">
                        <TextBlock x:Name="txtUserInfo"
                                   Text="Welcome, [User]" />
                        <TextBlock x:Name="txtUserEmail"
                                   Text="Email: [Email]" />
                        <TextBlock Text="Roles:"
                                   Margin="0,10,0,5" />
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <CheckBox x:Name="chkAccountClient"
                                      Content="Client"
                                      Margin="0,0,20,0"
                                      IsEnabled="False" />
                            <CheckBox x:Name="chkAccountChef"
                                      Content="Chef"
                                      IsEnabled="False" />
                        </StackPanel>
                        <Button x:Name="btnEditRoles"
                                Content="Edit Roles"
                                Width="100"
                                HorizontalAlignment="Left"
                                Click="BtnEditRoles_Click" />
                        <Button x:Name="btnSaveRoles"
                                Content="Save Roles"
                                Width="100"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                Visibility="Collapsed"
                                Click="BtnSaveRoles_Click" />
                        <TextBlock x:Name="txtRoleUpdateStatus"
                                   Margin="0,10,0,0"
                                   Foreground="Green" />
                    </StackPanel>
                    <Button Grid.Row="2"
                            x:Name="btnSignOut"
                            Content="Sign Out"
                            Width="100"
                            HorizontalAlignment="Left" />
                </Grid>
            </TabItem>
            <!-- Metro Map Tab -->
            <TabItem Header="Metro Map" x:Name="metroMap">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="Paris Metro Map"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,10" />
                    <Border Grid.Row="1"
                            Background="LightGray"
                            ClipToBounds="True">
                        <Viewbox x:Name="mapViewbox"
                                 Stretch="Uniform">
                            <Canvas x:Name="metroCanvas"
                                    Width="1000"
                                    Height="1000"
                                    Background="Transparent" />
                        </Viewbox>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Add this TabItem to the TabControl in MainWindow.xaml -->
            <TabItem Header="Food Services"
                     x:Name="tabFoodServices">
                <Grid>
                    <TabControl x:Name="foodServicesTabControl">
                        <!-- CLIENT VIEW: Browse and Order Food -->
                        <TabItem Header="Browse and Order"
                                 x:Name="tabBrowseOrder">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="300" />
                                </Grid.ColumnDefinitions>
                                <!-- Header -->
                                <StackPanel Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2">
                                    <TextBlock Text="Browse Available Dishes"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="0,0,0,10" />
                                    <!-- Filters -->
                                    <WrapPanel Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,15,0">
                                            <TextBlock Text="Dish Type:"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0" />
                                            <ComboBox x:Name="cmbDishType"
                                                      Width="120">
                                                <ComboBoxItem Content="All Types"
                                                              IsSelected="True" />
                                                <ComboBoxItem Content="entree" />
                                                <ComboBoxItem Content="main dish" />
                                                <ComboBoxItem Content="dessert" />
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,15,0">
                                            <TextBlock Text="Diet:"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0" />
                                            <ComboBox x:Name="cmbDiet"
                                                      Width="120">
                                                <ComboBoxItem Content="All"
                                                              IsSelected="True" />
                                                <ComboBoxItem Content="Vegetarian" />
                                                <ComboBoxItem Content="Vegan" />
                                                <ComboBoxItem Content="Gluten-Free" />
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,15,0">
                                            <TextBlock Text="Origin:"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0" />
                                            <ComboBox x:Name="cmbOrigin"
                                                      Width="120">
                                                <ComboBoxItem Content="All"
                                                              IsSelected="True" />
                                                <ComboBoxItem Content="French" />
                                                <ComboBoxItem Content="Italian" />
                                                <ComboBoxItem Content="Asian" />
                                                <ComboBoxItem Content="Other" />
                                            </ComboBox>
                                        </StackPanel>
                                        <Button x:Name="btnApplyFilters"
                                                Content="Apply Filters"
                                                Padding="10,3" />
                                    </WrapPanel>
                                </StackPanel>
                                <!-- Dish List -->
                                <DataGrid x:Name="dgDishes"
                                          Grid.Row="1"
                                          Grid.Column="0"
                                          Margin="0,0,10,0"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          SelectionChanged="DgDishes_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name"
                                                            Binding="{Binding Name}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Type"
                                                            Binding="{Binding Type}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Chef"
                                                            Binding="{Binding ChefName}"
                                                            Width="150" />
                                        <DataGridTextColumn Header="Price"
                                                            Binding="{Binding DishPrice, StringFormat={}{0:C2}}"
                                                            Width="80" />
                                        <DataGridTextColumn Header="Available Until"
                                                            Binding="{Binding PeremptionDate, StringFormat={}{0:d}}"
                                                            Width="120" />
                                        <DataGridTemplateColumn Header="Add"
                                                                Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="+"
                                                            Click="BtnAddToCart_Click"
                                                            Padding="5,0"
                                                            Margin="2"
                                                            Tag="{Binding DishID}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <!-- Shopping Cart Panel -->
                                <Grid Grid.Row="1"
                                      Grid.Column="1"
                                      Background="#f5f5f5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Text="Your Cart"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               Margin="10" />
                                    <ListBox x:Name="lbCart"
                                             Grid.Row="1"
                                             Margin="10">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Name}"
                                                               Grid.Column="0" />
                                                    <TextBlock Text="{Binding Quantity}"
                                                               Grid.Column="1"
                                                               Margin="5,0" />
                                                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C2}}"
                                                               Grid.Column="2" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <StackPanel Grid.Row="2"
                                                Margin="10">
                                        <TextBlock Text="Delivery Address:"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,5" />
                                        <RadioButton x:Name="rbMyAddress"
                                                     Content="Use my registered address"
                                                     IsChecked="True"
                                                     Margin="0,0,0,5" />
                                        <RadioButton x:Name="rbCustomAddress"
                                                     Content="Use different address"
                                                     Margin="0,0,0,5" />
                                        <StackPanel x:Name="pnlCustomAddress"
                                                    Visibility="Collapsed"
                                                    Margin="20,5,0,10">
                                            <TextBlock Text="Street:" />
                                            <TextBox x:Name="txtOrderStreet"
                                                     Margin="0,0,0,5" />
                                            <TextBlock Text="Street Number:" />
                                            <TextBox x:Name="txtOrderStreetNumber"
                                                     Margin="0,0,0,5" />
                                            <TextBlock Text="Postcode:" />
                                            <TextBox x:Name="txtOrderPostcode"
                                                     Margin="0,0,0,5" />
                                            <TextBlock Text="City:" />
                                            <TextBox x:Name="txtOrderCity"
                                                     Margin="0,0,0,5" />
                                        </StackPanel>
                                        <Separator Margin="0,5" />
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Total:"
                                                       FontWeight="Bold"
                                                       Grid.Column="0" />
                                            <TextBlock x:Name="txtCartTotal"
                                                       Text="€0.00"
                                                       FontWeight="Bold"
                                                       Grid.Column="1" />
                                        </Grid>
                                        <Button x:Name="btnPlaceOrder"
                                                Content="Place Order"
                                                Padding="10,5"
                                                Margin="0,10,0,0"
                                                Click="BtnPlaceOrder_Click" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </TabItem>
                        <!-- CHEF VIEW: Manage Dishes -->
                        <TabItem Header="Manage My Dishes"
                                 x:Name="tabManageDishes">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <!-- Header -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="My Dishes"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="0,0,0,10" />
                                    <Button x:Name="btnAddNewDish"
                                            Content="Add New Dish"
                                            HorizontalAlignment="Left"
                                            Padding="10,5"
                                            Margin="0,0,0,10"
                                            Click="BtnAddNewDish_Click" />
                                </StackPanel>
                                <!-- My Dishes List -->
                                <DataGrid x:Name="dgMyDishes"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name"
                                                            Binding="{Binding Name}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Type"
                                                            Binding="{Binding Type}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Price"
                                                            Binding="{Binding DishPrice, StringFormat={}{0:C2}}"
                                                            Width="80" />
                                        <DataGridTextColumn Header="Created"
                                                            Binding="{Binding FabricationDate, StringFormat={}{0:d}}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Expires"
                                                            Binding="{Binding PeremptionDate, StringFormat={}{0:d}}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Diet"
                                                            Binding="{Binding Diet}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Origin"
                                                            Binding="{Binding Origin}"
                                                            Width="100" />
                                        <DataGridTemplateColumn Header="Actions"
                                                                Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Edit"
                                                                Click="BtnEditDish_Click"
                                                                Padding="5,0"
                                                                Margin="2"
                                                                Tag="{Binding DishID}" />
                                                        <Button Content="Delete"
                                                                Click="BtnDeleteDish_Click"
                                                                Padding="5,0"
                                                                Margin="2"
                                                                Tag="{Binding DishID}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <!-- My Orders Tab - For both roles -->
                        <TabItem Header="My Orders"
                                 x:Name="tabMyOrders">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <!-- Header -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="My Orders"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="0,0,0,10" />
                                    <ComboBox x:Name="cmbOrderView"
                                              Width="200"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,10">
                                        <ComboBoxItem Content="Orders I Placed"
                                                      IsSelected="True" />
                                        <ComboBoxItem Content="Orders I Received" />
                                    </ComboBox>
                                </StackPanel>
                                <!-- Orders List -->
                                <DataGrid x:Name="dgOrders"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Single"
                                          SelectionChanged="DgOrders_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Order ID"
                                                            Binding="{Binding OrderID}"
                                                            Width="80" />
                                        <DataGridTextColumn Header="Date"
                                                            Binding="{Binding OrderDate, StringFormat={}{0:d}}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Client"
                                                            Binding="{Binding ClientName}"
                                                            Width="150" />
                                        <DataGridTextColumn Header="Chef"
                                                            Binding="{Binding ChefName}"
                                                            Width="150" />
                                        <DataGridTextColumn Header="Total"
                                                            Binding="{Binding OrderTotal, StringFormat={}{0:C2}}"
                                                            Width="100" />
                                        <DataGridTemplateColumn Header="Details"
                                                                Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="View"
                                                            Click="BtnViewOrderDetails_Click"
                                                            Padding="5,0"
                                                            Margin="2"
                                                            Tag="{Binding OrderID}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>