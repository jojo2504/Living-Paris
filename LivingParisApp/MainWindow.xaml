<Window x:Class="LivingParisApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Living Paris"
        Height="670"
        Width="980">
    <Grid>
        <TabControl>
            <!-- Sign In Tab -->
            <TabItem Header="Sign In"
                     x:Name="tabSignIn">
                <StackPanel Margin="20">
                    <TextBlock Text="Sign In"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,20" />
                    <TextBlock Text="Email:" />
                    <TextBox x:Name="txtSignInEmail"
                             Margin="0,5,0,10"
                             KeyDown="txtSignIn_KeyDown" />
                    <TextBlock Text="Password:" />
                    <PasswordBox x:Name="pwdSignIn"
                                 Margin="0,5,0,20"
                                 KeyDown="txtSignIn_KeyDown" />
                    <Button x:Name="btnSignIn"
                            Content="Sign In"
                            Width="100"
                            HorizontalAlignment="Left" />
                    <TextBlock x:Name="txtSignInStatus"
                               Margin="0,10,0,0" />
                </StackPanel>
            </TabItem>
            <!-- Sign Up Tab -->
            <TabItem Header="Sign Up"
                     x:Name="tabSignUp">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Sign Up"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20" />
                        <TextBlock Text="First Name:" />
                        <TextBox x:Name="txtFirstName"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Last Name:" />
                        <TextBox x:Name="txtLastName"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Email:" />
                        <TextBox x:Name="txtEmail"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Password:" />
                        <PasswordBox x:Name="pwdSignUp"
                                     Margin="0,5,0,10" />
                        <TextBlock Text="Confirm Password:" />
                        <PasswordBox x:Name="pwdConfirm"
                                     Margin="0,5,0,10" />
                        <TextBlock Text="Phone Number:" />
                        <TextBox x:Name="txtPhone"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Street:" />
                        <TextBox x:Name="txtStreet"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Street Number:" />
                        <TextBox x:Name="txtStreetNumber"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Postcode:" />
                        <TextBox x:Name="txtPostcode"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="City:" />
                        <TextBox x:Name="txtCity"
                                 Margin="0,5,0,10" />
                        <TextBlock Text="Closest Metro (Optional):" />
                        <ComboBox x:Name="cmbMetro"
                                  Margin="0,5,0,10"
                                  Width="200" />
                        <TextBlock Text="User Type (Select One or Both):" />
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5,0,20">
                            <CheckBox x:Name="chkClient"
                                      Content="Client"
                                      Margin="0,0,20,0" />
                            <CheckBox x:Name="chkChef"
                                      Content="Chef" />
                        </StackPanel>
                        <Button x:Name="btnSignUp"
                                Content="Sign Up"
                                Width="100"
                                HorizontalAlignment="Left" />
                        <TextBlock x:Name="txtSignUpStatus"
                                   Margin="0,10,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <!-- User Account Tab (visible after login) -->
            <TabItem Header="My Account"
                     x:Name="tabAccount">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="My Account"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,20" />
                    <StackPanel Grid.Row="1">
                        <!-- View Mode -->
                        <StackPanel x:Name="viewModePanel">
                            <TextBlock x:Name="txtUserInfo"
                                       Text="Welcome, [User]" />
                            <TextBlock x:Name="txtUserEmail"
                                       Text="Email: [Email]" />
                            <TextBlock x:Name="txtClosestMetro"
                                       Text="ClosestMetro: [ClosestMetro]" />
                            <TextBlock Text="Roles:"
                                       Margin="0,10,0,5" />
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,10">
                                <CheckBox x:Name="chkAccountClient"
                                          Content="Client"
                                          Margin="0,0,20,0"
                                          IsEnabled="False" />
                                <CheckBox x:Name="chkAccountChef"
                                          Content="Chef"
                                          IsEnabled="False" />
                            </StackPanel>
                            <Button x:Name="btnEditAccount"
                                    Content="Edit Account"
                                    Width="120"
                                    HorizontalAlignment="Left"
                                    Margin="0,10,0,0"
                                    Click="BtnEditAccount_Click" />
                        </StackPanel>
                        <!-- Edit Mode -->
                        <StackPanel x:Name="editModePanel"
                                    Visibility="Collapsed">
                            <TextBlock Text="Name:"
                                       Margin="0,5,0,0" />
                            <TextBox x:Name="txtEditName"
                                     Margin="0,0,0,10" />
                            <TextBlock Text="Email:"
                                       Margin="0,5,0,0" />
                            <TextBox x:Name="txtEditEmail"
                                     Margin="0,0,0,10" />
                            <TextBlock Text="Closest Metro:"
                                       Margin="0,5,0,0" />
                            <ComboBox x:Name="cmbEditClosestMetro"
                                      Margin="0,0,0,10" />
                            <TextBlock Text="Roles:"
                                       Margin="0,10,0,5" />
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,10">
                                <CheckBox x:Name="chkEditClient"
                                          Content="Client"
                                          Margin="0,0,20,0" />
                                <CheckBox x:Name="chkEditChef"
                                          Content="Chef" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,10,0,0">
                                <Button x:Name="btnSaveAccount"
                                        Content="Save Changes"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Click="BtnSaveAccount_Click" />
                                <Button x:Name="btnCancelEdit"
                                        Content="Cancel"
                                        Width="80"
                                        HorizontalAlignment="Left"
                                        Margin="10,0,0,0"
                                        Click="BtnCancelEdit_Click" />
                            </StackPanel>
                            <TextBlock x:Name="txtUpdateStatus"
                                       Margin="0,10,0,0"
                                       Foreground="Green" />
                        </StackPanel>
                    </StackPanel>
                    <Button Grid.Row="2"
                            x:Name="btnSignOut"
                            Content="Sign Out"
                            Width="100"
                            HorizontalAlignment="Left" />
                </Grid>
            </TabItem>
            <!-- Metro Map Tab -->
            <TabItem Header="Metro Map"
                     x:Name="metroMap">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="Paris Metro Map"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,10" />
                    <Border Grid.Row="1"
                            Background="LightGray"
                            ClipToBounds="True">
                        <Viewbox x:Name="mapViewbox"
                                 Stretch="Uniform">
                            <Canvas x:Name="metroCanvas"
                                    Width="1000"
                                    Height="1000"
                                    Background="Transparent" />
                        </Viewbox>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Food Services Tab -->
            <TabItem Header="Food Services"
                     x:Name="tabFoodServices">
                <Grid>
                    <TabControl x:Name="foodServicesTabControl">
                        <!-- CLIENT VIEW: Browse and Order Food -->
                        <TabItem Header="Browse and Order"
                                 x:Name="tabBrowseOrder">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="300" />
                                </Grid.ColumnDefinitions>
                                <!-- Header -->
                                <StackPanel Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2">
                                    <TextBlock Text="Browse Available Dishes"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="0,0,0,10" />
                                    <!-- Filters -->
                                    <WrapPanel Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,15,0">
                                            <TextBlock Text="Dish Type:"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0" />
                                            <ComboBox x:Name="cmbDishType"
                                                      Width="120"
                                                      SelectedIndex="0">
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,15,0">
                                            <TextBlock Text="Diet:"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0" />
                                            <ComboBox x:Name="cmbDiet"
                                                      Width="120"
                                                      SelectedIndex="0">
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,15,0">
                                            <TextBlock Text="Origin:"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0" />
                                            <ComboBox x:Name="cmbOrigin"
                                                      Width="120"
                                                      SelectedIndex="0">
                                            </ComboBox>
                                        </StackPanel>
                                        <Button x:Name="ApplyFiltersDishes"
                                                Content="Apply Filters"
                                                Padding="10,3"
                                                Click="BtnApplyFiltersDishes"/>
                                    </WrapPanel>
                                </StackPanel>
                                <!-- Dish List -->
                                <DataGrid x:Name="dgDishes"
                                          Grid.Row="1"
                                          Grid.Column="0"
                                          Margin="0,0,10,0"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          HeadersVisibility="Column"
                                          SelectionChanged="DgDishes_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name"
                                                            Binding="{Binding Name}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Type"
                                                            Binding="{Binding Type}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Diet"
                                                            Binding="{Binding Diet}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Origin"
                                                            Binding="{Binding Origin}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Chef"
                                                            Binding="{Binding ChefName}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Price"
                                                            Binding="{Binding DishPrice, StringFormat={}{0:C2}}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Available Until"
                                                            Binding="{Binding PeremptionDate, StringFormat={}{0:d}}"
                                                            Width="*" />
                                        <DataGridTemplateColumn Header="Add"
                                                                Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="+"
                                                            Click="BtnAddToCart_Click"
                                                            Padding="5,0"
                                                            Margin="2"
                                                            Tag="{Binding DishID}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <!-- Shopping Cart Panel -->
                                <Grid Grid.Row="1"
                                      Grid.Column="1"
                                      Background="#f5f5f5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Text="Your Cart"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               Margin="10" />
                                    <ListBox x:Name="lbCart"
                                             Grid.Row="1"
                                             Margin="10">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Name}"
                                                               Grid.Column="0" />
                                                    <TextBlock Text="{Binding Quantity}"
                                                               Grid.Column="1"
                                                               Margin="5,0" />
                                                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C2}}"
                                                               Grid.Column="2"
                                                               Margin="5,0" />
                                                    <Button Content="X"
                                                            Grid.Column="3"
                                                            Width="25"
                                                            Height="25"
                                                            Margin="5,0,0,0"
                                                            Click="RemoveFromCart_Click"
                                                            CommandParameter="{Binding}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <StackPanel Grid.Row="2"
                                                Margin="10">
                                        <TextBlock Text="Delivery Address:"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,5" />
                                        <RadioButton x:Name="rbMyAddress"
                                                     Content="Use my registered address"
                                                     IsChecked="True"
                                                     Margin="0,0,0,5" />
                                        <RadioButton x:Name="rbCustomAddress"
                                                     Content="Use different address"
                                                     Margin="0,0,0,5" />
                                        <StackPanel x:Name="pnlCustomAddress"
                                                    Visibility="Collapsed"
                                                    Margin="20,5,0,10">
                                            <TextBlock Text="Street:" />
                                            <TextBox x:Name="txtOrderStreet"
                                                     Margin="0,0,0,5" />
                                            <TextBlock Text="Street Number:" />
                                            <TextBox x:Name="txtOrderStreetNumber"
                                                     Margin="0,0,0,5" />
                                            <TextBlock Text="Postcode:" />
                                            <TextBox x:Name="txtOrderPostcode"
                                                     Margin="0,0,0,5" />
                                            <TextBlock Text="City:" />
                                            <TextBox x:Name="txtOrderCity"
                                                     Margin="0,0,0,5" />
                                        </StackPanel>
                                        <Separator Margin="0,5" />
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Total:"
                                                       FontWeight="Bold"
                                                       Grid.Column="0" />
                                            <TextBlock x:Name="txtCartTotal"
                                                       Text="€0.00"
                                                       FontWeight="Bold"
                                                       Grid.Column="1" />
                                        </Grid>
                                        <Button x:Name="btnPlaceOrder"
                                                Content="Place Order"
                                                Padding="10,5"
                                                Margin="0,10,0,0"
                                                Click="BtnPlaceOrder_Click" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </TabItem>
                        <!-- CHEF VIEW: Manage Dishes -->
                        <TabItem Header="Manage My Dishes"
                                 x:Name="tabManageDishes">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <!-- Header -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="My Dishes"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="0,0,0,10" />
                                    <Button x:Name="btnAddNewDish"
                                            Content="Add New Dish"
                                            HorizontalAlignment="Left"
                                            Padding="10,5"
                                            Margin="0,0,0,10"
                                            Click="BtnAddNewDish_Click" />
                                </StackPanel>
                                <!-- My Dishes List -->
                                <DataGrid x:Name="dgMyDishes"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name"
                                                            Binding="{Binding Name}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Type"
                                                            Binding="{Binding Type}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Price"
                                                            Binding="{Binding DishPrice, StringFormat={}{0:C2}}"
                                                            Width="80" />
                                        <DataGridTextColumn Header="Created"
                                                            Binding="{Binding FabricationDate, StringFormat={}{0:d}}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Expires"
                                                            Binding="{Binding PeremptionDate, StringFormat={}{0:d}}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Diet"
                                                            Binding="{Binding Diet}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Origin"
                                                            Binding="{Binding Origin}"
                                                            Width="100" />
                                        <DataGridTemplateColumn Header="Actions"
                                                                Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Edit"
                                                                Click="BtnEditDish_Click"
                                                                Padding="5,0"
                                                                Margin="2"
                                                                Tag="{Binding DishID}" />
                                                        <Button Content="Delete"
                                                                Click="BtnDeleteDish_Click"
                                                                Padding="5,0"
                                                                Margin="2"
                                                                Tag="{Binding DishID}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <!-- My Orders Tab - For both roles -->
                        <TabItem Header="My Orders"
                                 x:Name="tabMyOrders">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <!-- Header -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="My Orders"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="0,0,0,10" />
                                    <ComboBox x:Name="cmbOrderView"
                                              Width="200"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,10">
                                        <ComboBoxItem Content="Orders I Placed"
                                                      IsSelected="True" />
                                        <ComboBoxItem Content="Orders I Received" />
                                    </ComboBox>
                                </StackPanel>
                                <!-- Orders List -->    
                                <DataGrid x:Name="dgOrders"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          HeadersVisibility="Column"
                                          SelectionChanged="DgOrders_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Order ID"
                                                            Binding="{Binding OrderID}"
                                                            Width="80" />
                                        <DataGridTextColumn Header="Date"
                                                            Binding="{Binding OrderDate, StringFormat={}{0:d}}"
                                                            Width="100" />
                                        <DataGridTextColumn Header="Client"
                                                            Binding="{Binding ClientName}"
                                                            Width="150" />
                                        <DataGridTextColumn Header="Chef"
                                                            Binding="{Binding ChefName}"
                                                            Width="150" />
                                        <DataGridTextColumn Header="Total"
                                                            Binding="{Binding OrderTotal, StringFormat={}{0:C2}}"
                                                            Width="100" />
                                        <DataGridTemplateColumn Header="Details"
                                                                Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="View"
                                                            Click="BtnViewOrderDetails_Click"
                                                            Padding="5,0"
                                                            Margin="2"
                                                            Tag="{Binding OrderID}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Cancel Order"
                                                                Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="X"
                                                            Click="BtnCancelOrder_Click"
                                                            Padding="5,0"
                                                            Margin="2"
                                                            Tag="{Binding OrderID}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Admin Tab"
                     x:Name="adminTab">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="Admin Dashboard"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,20" />
                    <TabControl Grid.Row="1">
                        <!-- User Management -->
                        <TabItem Header="Manage Users">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0"
                                            Margin="0,0,0,10">
                                    <TextBlock Text="User Management"
                                               FontSize="16"
                                               FontWeight="Bold" />
                                    <WrapPanel Margin="0,10,0,0">
                                        <TextBlock Text="Search by Email:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0" />
                                        <TextBox x:Name="txtSearchUser"
                                                 Width="200"
                                                 Margin="0,0,10,0"
                                                 KeyDown="TxtSearchUser_KeyDown" />
                                        <Button x:Name="btnSearchUser"
                                                Content="Search"
                                                Padding="10,3"
                                                Click="BtnSearchUser_Click" />
                                    </WrapPanel>
                                </StackPanel>
                                <DataGrid x:Name="dgUsers"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Email"
                                                            Binding="{Binding Mail}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Password"
                                                            Binding="{Binding Password}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Name"
                                                            Binding="{Binding FullName}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Phone Number"
                                                            Binding="{Binding PhoneNumber}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="City"
                                                            Binding="{Binding City}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Role"
                                                            Binding="{Binding Roles}"
                                                            Width="*" />
                                        <DataGridTemplateColumn Header="Actions"
                                                                Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Edit"
                                                                Click="BtnEditUser_Click"
                                                                Padding="5,0"
                                                                Margin="2"
                                                                Tag="{Binding UserID}" />
                                                        <Button Content="Delete"
                                                                Click="BtnDeleteUser_Click"
                                                                Padding="5,0"
                                                                Margin="2"
                                                                Tag="{Binding UserID}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                            Margin="0,10,0,0">
                                    <Button x:Name="btnAddUser"
                                            Content="Add New User"
                                            Width="120"
                                            HorizontalAlignment="Left"
                                            Padding="10,3"
                                            Click="BtnAddUser_Click" />
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Manage Dishes">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0"
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Dish Management"
                                               FontSize="16"
                                               FontWeight="Bold" />
                                    <WrapPanel Margin="0,10,0,0">
                                        <TextBlock Text="Search by Name:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0" />
                                        <TextBox x:Name="txtSearchDish"
                                                 Width="200"
                                                 Margin="0,0,10,0"
                                                 KeyDown="TxtSearchDish_KeyDown" />
                                        <TextBlock Text="Filter by Chef:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0" />
                                        <ComboBox x:Name="cmbFilterChef"
                                                  Width="150"
                                                  Margin="0,0,10,0">
                                            <ComboBoxItem Content="All Chefs"
                                                          IsSelected="True" />
                                        </ComboBox>
                                        <Button x:Name="btnSearchDish"
                                                Content="Search"
                                                Padding="10,3"
                                                Click="BtnSearchDish_Click" />
                                    </WrapPanel>
                                </StackPanel>
                                <DataGrid x:Name="dgAdminDishes"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID"
                                                            Binding="{Binding DishID}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Name"
                                                            Binding="{Binding Name}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Type"
                                                            Binding="{Binding Type}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Chef"
                                                            Binding="{Binding ChefName}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Price"
                                                            Binding="{Binding DishPrice, StringFormat={}{0:C2}}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Created"
                                                            Binding="{Binding FabricationDate, StringFormat={}{0:d}}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Expires"
                                                            Binding="{Binding PeremptionDate, StringFormat={}{0:d}}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Diet"
                                                            Binding="{Binding Diet}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Origin"
                                                            Binding="{Binding Origin}"
                                                            Width="100" />
                                        <DataGridTemplateColumn Header="Actions"
                                                                Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Edit"
                                                                Click="BtnEditAdminDish_Click"
                                                                Padding="5,0"
                                                                Margin="2"
                                                                Tag="{Binding DishID}" />
                                                        <Button Content="Delete"
                                                                Click="BtnDeleteAdminDish_Click"
                                                                Padding="5,0"
                                                                Margin="2"
                                                                Tag="{Binding DishID}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <!-- Order Management -->
                        <TabItem Header="Manage Orders">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0"
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Order Management"
                                               FontSize="16"
                                               FontWeight="Bold" />
                                    <WrapPanel Margin="0,10,0,0">
                                        <TextBlock Text="Filter by Status:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0" />
                                        <ComboBox x:Name="cmbOrderStatus"
                                                  Width="150"
                                                  SelectedIndex="0">
                                            <ComboBoxItem Content="All" />
                                            <ComboBoxItem Content="Pending" />
                                            <ComboBoxItem Content="Completed" />
                                            <ComboBoxItem Content="Cancelled" />
                                        </ComboBox>
                                        <Button x:Name="btnFilterOrders"
                                                Content="Apply Filter"
                                                Padding="10,3"
                                                Margin="10,0,0,0"
                                                Click="BtnFilterOrders_Click" />
                                    </WrapPanel>
                                </StackPanel>
                                <DataGrid x:Name="dgAdminOrders"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Order ID"
                                                            Binding="{Binding OrderID}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Date"
                                                            Binding="{Binding OrderDate, StringFormat={}{0:d}}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Client"
                                                            Binding="{Binding ClientName}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Chef"
                                                            Binding="{Binding ChefName}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Status"
                                                            Binding="{Binding Status}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Total"
                                                            Binding="{Binding OrderTotal, StringFormat={}{0:C2}}"
                                                            Width="*" />
                                        <DataGridTemplateColumn Header="Actions"
                                                                Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="View"
                                                            Click="BtnViewAdminOrder_Click"
                                                            Padding="5,0"
                                                            Margin="2"
                                                            Tag="{Binding OrderID}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>