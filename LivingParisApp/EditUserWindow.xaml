<Window x:Class="LivingParisApp.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User"
        Height="500"
        Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="First Name:"
               Grid.Row="0"
               Grid.Column="0" />
        <TextBox x:Name="txtFirstName"
                 Grid.Row="1"
                 Grid.Column="0"
                 Margin="0,0,10,10" />
        <Label Content="Last Name:"
               Grid.Row="0"
               Grid.Column="1" />
        <TextBox x:Name="txtLastName"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,10" />
        <Label Content="Street:"
               Grid.Row="2"
               Grid.Column="0" />
        <TextBox x:Name="txtStreet"
                 Grid.Row="3"
                 Grid.Column="0"
                 Margin="0,0,10,10" />
        <Label Content="Street Number:"
               Grid.Row="2"
               Grid.Column="1" />
        <TextBox x:Name="txtStreetNumber"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="0,0,0,10" />
        <Label Content="Postcode:"
               Grid.Row="4"
               Grid.Column="0" />
        <TextBox x:Name="txtPostcode"
                 Grid.Row="5"
                 Grid.Column="0"
                 Margin="0,0,10,10" />
        <Label Content="City:"
               Grid.Row="4"
               Grid.Column="1" />
        <TextBox x:Name="txtCity"
                 Grid.Row="5"
                 Grid.Column="1"
                 Margin="0,0,0,10" />
        <Label Content="Phone Number:"
               Grid.Row="6"
               Grid.Column="0" />
        <TextBox x:Name="txtPhoneNumber"
                 Grid.Row="7"
                 Grid.Column="0"
                 Margin="0,0,10,10" />
        <Label Content="Email:"
               Grid.Row="6"
               Grid.Column="1" />
        <TextBox x:Name="txtMail"
                 Grid.Row="7"
                 Grid.Column="1"
                 Margin="0,0,0,10" />
        <Label Content="Closest Metro:"
               Grid.Row="8"
               Grid.Column="0" />
        <TextBox x:Name="txtClosestMetro"
                 Grid.Row="9"
                 Grid.Column="0"
                 Margin="0,0,10,10" />
        <Label Content="Password:"
               Grid.Row="8"
               Grid.Column="1" />
        <PasswordBox x:Name="txtPassword"
                     Grid.Row="9"
                     Grid.Column="1"
                     Margin="0,0,0,10" />
        <Label Content="User Type:"
               Grid.Row="10"
               Grid.Column="0" />
        <StackPanel Grid.Row="11"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
            <CheckBox x:Name="chkIsClient"
                      Content="Client"
                      Margin="0,0,20,0" />
            <CheckBox x:Name="chkIsChef"
                      Content="Chef"
                      Margin="0,0,20,0" />
        </StackPanel>
        <StackPanel Grid.Row="17"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="btnSave"
                    Content="Save"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="BtnSave_Click" />
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="80"
                    Click="BtnCancel_Click" />
        </StackPanel>
    </Grid>
</Window>