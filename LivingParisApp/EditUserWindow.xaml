<Window x:Class="LivingParisApp.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8E1"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="First Name:"
                   Grid.Row="0"
                   Grid.Column="0"
                   Style="{StaticResource CroissantTextBlock}" />
        <TextBox x:Name="txtFirstName"
                 Grid.Row="1"
                 Grid.Column="0"
                 Margin="0,0,10,10"
                 Style="{StaticResource CroissantTextBox}" />
        <TextBlock Text="Last Name:"
                   Grid.Row="0"
                   Grid.Column="1"
                   Style="{StaticResource CroissantTextBlock}" />
        <TextBox x:Name="txtLastName"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,10"
                 Style="{StaticResource CroissantTextBox}" />
        <TextBlock Text="Street:"
                   Grid.Row="2"
                   Grid.Column="0"
                   Style="{StaticResource CroissantTextBlock}" />
        <TextBox x:Name="txtStreet"
                 Grid.Row="3"
                 Grid.Column="0"
                 Margin="0,0,10,10"
                 Style="{StaticResource CroissantTextBox}" />
        <TextBlock Text="Street Number:"
                   Grid.Row="2"
                   Grid.Column="1"
                   Style="{StaticResource CroissantTextBlock}" />
        <TextBox x:Name="txtStreetNumber"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="0,0,0,10"
                 Style="{StaticResource CroissantTextBox}" />
        <TextBlock Text="Postcode:"
                   Grid.Row="4"
                   Grid.Column="0"
                   Style="{StaticResource CroissantTextBlock}" />
        <TextBox x:Name="txtPostcode"
                 Grid.Row="5"
                 Grid.Column="0"
                 Margin="0,0,10,10"
                 Style="{StaticResource CroissantTextBox}" />
        <TextBlock Text="City:"
                   Grid.Row="4"
                   Grid.Column="1"
                   Style="{StaticResource CroissantTextBlock}" />
        <TextBox x:Name="txtCity"
                 Grid.Row="5"
                 Grid.Column="1"
                 Margin="0,0,0,10"
                 Style="{StaticResource CroissantTextBox}" />
        <TextBlock Text="Phone Number:"
                   Grid.Row="6"
                   Grid.Column="0"
                   Style="{StaticResource CroissantTextBlock}" />
        <TextBox x:Name="txtPhoneNumber"
                 Grid.Row="7"
                 Grid.Column="0"
                 Margin="0,0,10,10"
                 Style="{StaticResource CroissantTextBox}" />
        <TextBlock Text="Email:"
                   Grid.Row="6"
                   Grid.Column="1"
                   Style="{StaticResource CroissantTextBlock}" />
        <TextBox x:Name="txtMail"
                 Grid.Row="7"
                 Grid.Column="1"
                 Margin="0,0,0,10"
                 Style="{StaticResource CroissantTextBox}" />
        <TextBlock Text="Closest Metro:"
                   Grid.Row="8"
                   Grid.Column="0"
                   Style="{StaticResource CroissantTextBlock}" />
        <ComboBox x:Name="cmbClosestMetro"
                  Grid.Row="9"
                  Grid.Column="0"
                  Margin="0,0,10,10"
                  Style="{StaticResource CroissantComboBox}" />
        <TextBlock Text="Password:"
                   Grid.Row="8"
                   Grid.Column="1"
                   Style="{StaticResource CroissantTextBlock}" />
        <PasswordBox x:Name="txtPassword"
                     Grid.Row="9"
                     Grid.Column="1"
                     Margin="0,0,0,10"
                     Style="{StaticResource CroissantPasswordBox}" />
        <TextBlock Text="User Type:"
                   Grid.Row="10"
                   Grid.Column="0"
                   Style="{StaticResource CroissantTextBlock}" />
        <StackPanel Grid.Row="11"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
            <CheckBox x:Name="chkIsClient"
                      Content="Client"
                      Margin="0,0,20,0"
                      Style="{StaticResource CroissantCheckBox}" />
            <CheckBox x:Name="chkIsChef"
                      Content="Chef"
                      Margin="0,0,20,0"
                      Style="{StaticResource CroissantCheckBox}" />
        </StackPanel>
        <StackPanel Grid.Row="17"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="btnSave"
                    Content="Save"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="BtnSave_Click"
                    Style="{StaticResource CroissantButton}" />
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="80"
                    Click="BtnCancel_Click"
                    Style="{StaticResource CroissantButton}" />
        </StackPanel>
    </Grid>
</Window>